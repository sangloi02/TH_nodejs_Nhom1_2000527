<% for(let i=0;i<data.rows.length;i++){ %>
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 border-right">
            <form action="/update-user" method="post">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">User</label><input type="text" class="form-control" name="user" value="<%= data.rows[i].user %>"></div>
                    <div class="col-md-6"><label class="labels">Password</label><input type="text" class="form-control" name="password" value="<%= data.rows[i].password %>"></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12"><label class="labels">Fullname</label><input type="text" class="form-control" name="fullname" value="<%= data.rows[i].fullname %>"></div>
                    <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" name="email" value="<%= data.rows[i].email %>"></div>
                    <div style="margin-top: 10px;display: grid;" class="col-md-12"><label class="labels">Sex</label>
                        <select class="select" name="sex">
                            <option value="">---Giới tính---</option>
                            <option value="Female">1.Female</option>
                            <option value="Male">2.Male</option>
                            <option value="Other">3.Other</option>
                        </select>
                    </div>
                    <div style="margin-top: 10px;" class="col-md-12"><label class="labels">Address</label><input type="text" class="form-control" name="address" value="<%= data.rows[i].address %>"></div>
                    <div style="margin-top: 10px;display: grid;" class="col-md-12"><label class="labels">Role</label>
                        <select class="select" name="quyen">
                            <option value="0">---Phân quyền---</option>
                            <option value="Admin">1.Người dùng</option>
                            <option value="User">2.Quản trị viên</option>
                            
                        </select>
                    </div>
                <div class="mt-5 text-center"><input id="<%= data.rows[i].fullname %>" type="submit" value="Save Change"></div>
            </div>
            </form>
        </div>
    
    </div>
</div>
</div>
</div>
<% }%>